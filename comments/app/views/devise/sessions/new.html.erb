<div align="center" id="login_page">
  <div id="login_page_inside"><div id="login_page_inside_header">Giriş</div>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>



        <div><%= f.label 'E-Posta' %><br />
          <%= f.email_field :email, :placeholder => "e-posta" %></div>


        <% if @user.password_required? %>
            <div><%= f.label 'Şifre' %><br />
              <%= f.password_field :password, :placeholder => "şifre" %></div>
        <% end %>
        <br />

        <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me %> <%= f.label 'Oturumumu açık tut' %></div>
        <% end -%>

        <br />

        <div id="enter_button"><%= f.submit "Giriş yap" %></div>
    <% end %>




    <%= render "links" %>

    <a href="/auth/twitter" class="auth_provider">
      <%= image_tag "/png/twitter_64.png", :size => "64x64", :alt => "Twitter" %>
      Twitter
    </a>
    <a href="/auth/facebook" class="auth_provider">
      <%= image_tag "/png/facebook_64.png", :size => "64x64", :alt => "Facebook" %>
      Facebook
    </a>
    <a href="/auth/google_apps" class="auth_provider">
      <%= image_tag "/png/google_64.png", :size => "64x64", :alt => "Google" %>
      Google
    </a>
    <a href="/auth/open_id" class="auth_provider">
      <%= image_tag "/png/openid_64.png", :size => "64x64", :alt => "OpenID" %>
      OpenID
    </a>

  </div>
</div>
